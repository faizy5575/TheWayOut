<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_weight="10"
    android:background="@color/colorPrimary"
    tools:context="com.exmple.taimoor.thewayout.MainActivity">


    <EditText
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_above="@+id/loginButton"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="29dp"
        android:layout_alignStart="@+id/txtUserName" />

    <TextView
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/txtUserName"
        android:layout_alignBottom="@+id/txtUserName"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignBaseline="@+id/txtPassword"
        android:layout_alignBottom="@+id/txtPassword"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:background="@android:color/white"
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerButton"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:background="@android:color/white"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginButton"
        android:onClick="onLogin"
        android:layout_marginBottom="84dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2" />

    <EditText
        android:background="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUserName"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/txtPassword"
        android:layout_alignParentEnd="true"
        android:pointerIcon="none" />

    <TextView
        android:textSize="40dp"
        android:textColor="@android:color/white"
        android:text="Login / Registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
