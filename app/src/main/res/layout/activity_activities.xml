<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sports"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">


    <TextView
        android:textStyle="italic"
        android:fontFamily="serif"
        android:background="#E91E63"
        android:layout_marginBottom="500dp"
        android:text="ACTIVITIES"
        android:textAlignment="center"
        android:textSize="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/dt1"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:useDefaultMargins="true"
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageView">

        <LinearLayout
            android:id="@+id/layout_row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Barbar Shop" />

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Library" />

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Children Play Area" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Roll Skating Court" />

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Spa/Sauna" />

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Sports Gear Shop" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Health Club" />

            <Button
                android:textStyle="italic"
                android:fontFamily="serif"
                style="?android:attr/buttonStyleSmall"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:text="Splash Pads" />


        </LinearLayout>



    </LinearLayout>


</RelativeLayout>
